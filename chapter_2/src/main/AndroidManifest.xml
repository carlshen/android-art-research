<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wzc.chapter_2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.wzc.chapter_2.MainActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard"
            android:label="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.wzc.chapter_2.SecondActivity"
            android:configChanges="screenLayout"
            android:label="SecondActivity"
            android:process=":remote"/>

        <activity
            android:name="com.wzc.chapter_2.ThirdActivity"
            android:configChanges="screenLayout"
            android:label="ThirdActivity"
            android:process="com.wzc.chapter_2.remote"/>
    </application>

</manifest>