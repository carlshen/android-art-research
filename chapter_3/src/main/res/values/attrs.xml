<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MarqueeTextView">
        <attr name="scrollInterval" format="integer" />
        <attr name="scrollFirstDelay" format="integer" />
        <attr name="scrollMode">
            <enum name="forever" value="0" />
            <enum name="oneshot" value="1" />
        </attr>
        <attr name="scrollDirection">
            <enum name="left" value="1" />
            <enum name="right" value="-1" />
        </attr>
    </declare-styleable>
</resources>